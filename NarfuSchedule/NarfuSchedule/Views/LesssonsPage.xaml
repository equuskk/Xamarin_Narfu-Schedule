<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NarfuSchedule.Views.LesssonsPage"
             Title="Расписание">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button Text="Обновить" Clicked="Refresh_OnClicked"/>
            <Button Text="Удалить" Clicked="Delete_OnClicked"/>
        </StackLayout>
        <ListView Margin="5" BackgroundColor="LightSeaGreen" 
                  HasUnevenRows="True"
                  ItemsSource="{Binding Lessons}"
                  IsGroupingEnabled="true"
                  ItemTemplate="{StaticResource lessonList}"
                  CachingStrategy="RecycleElement"
                  SelectionMode="None">
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell Height="25">
                        <StackLayout VerticalOptions="FillAndExpand"
                                     Padding="5"
                                     BackgroundColor="#3498DB">
                            <Label Text="{Binding Key}" 
                                   TextColor="White" VerticalOptions="Center"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
