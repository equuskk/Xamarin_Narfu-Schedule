<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NarfuSchedule.Views.SettingsPage"
             Title="Настройки">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Введите номер группы:"/>
            <Entry Text="{Binding Group}" Keyboard="Numeric"/>
            <Button Text="Сохранить" Clicked="Save_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>